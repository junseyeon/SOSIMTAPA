<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main3Audio">


    <GridLayout
        android:columnCount="3"
        android:rowCount="1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity ="center"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_top1"
            android:columnCount="0"
            android:rowCount="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="community"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voice"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="12dp"
            android:columnCount="1"
            android:rowCount="0"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_top3"
            android:columnCount="0"
            android:rowCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="script"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_gravity="center"
            style="?android:attr/borderlessButtonStyle"/>

    </GridLayout>

    <Button
        android:id="@+id/speakPrac_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="말하기 연습하기"
        android:background="@drawable/script_prac_btn"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />


   <ListView
       android:layout_margin="20dp"
       android:id="@+id/songList"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   </ListView>



</LinearLayout>