<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VoiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="다양한 상황에서 필요한 말을 미리 연습해봐요"
            android:textSize="30dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="0dp"
        />


        <EditText
            android:id="@+id/script_Text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/chat_bubble"
            android:elevation="2dp"
            android:hint="이곳에 입력해주세요."
            android:textColor="#B8B8B8"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:gravity="left"/>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <Button
            android:background="#FF8B8E"
            android:id="@+id/btn_scriptAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            android:text="대본 추가"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableTop="@drawable/script_add"
            android:padding="30dp"
            />

        <Button
            android:background="#FF8B8E"
            android:id="@+id/tone_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            android:text="여자"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableTop="@drawable/woman_voice"
            android:padding="30dp"
            />

        <Button
            android:background="#FF8B8E"
            android:id="@+id/tone_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            android:text="남자"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableTop="@drawable/man_voice"
            android:padding="30dp"
            />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <Button
            android:background="#FF8B8E"
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            android:text="뒤로가기"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableTop="@drawable/back"
            android:padding="30dp"
            />

        <Button
            android:background="#FF8B8E"
            android:id="@+id/btn_scriptList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_weight="1"
            android:text="대본 목록"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableTop="@drawable/script_list"
            android:padding="30dp"
            />

        <!--<Button-->
            <!--android:background="#FF8B8E"-->
            <!--android:id="@+id/tone_down"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="110dp"-->
            <!--android:layout_span="1"-->
            <!--android:layout_weight="1"-->
            <!--android:text="남자"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="15dp"-->
            <!--android:paddingTop="10dp"/>-->

    </TableRow>



